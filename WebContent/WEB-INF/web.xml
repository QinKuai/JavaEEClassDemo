<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">

	<servlet>
		<servlet-name>MainServlet</servlet-name>
		<servlet-class>com.qinkuai.classdemo.service.MainServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>CourseDetailServlet</servlet-name>
		<servlet-class>com.qinkuai.classdemo.service.CourseDetailServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	  
	<servlet>
		<servlet-name>AddTaskServlet</servlet-name>
		<servlet-class>com.qinkuai.classdemo.service.AddTaskServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CourseDetailServlet</servlet-name>
		<url-pattern>/course-detail</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AddTaskServlet</servlet-name>
		<url-pattern>/add-task</url-pattern>
	</servlet-mapping>

</web-app>